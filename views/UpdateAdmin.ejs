<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %> 
 <div class="wrapper wrapper--w960">
    <div class="card card-2">
        <div class="card-body">
            <h2 class="title">Modificar Usuario <%= data.nom_us%></h2>
            <form method="POST" action="/Reg/Admin" enctype="multipart/form-data">
                <div class="input-group">
                    <input class="input--style-2" type="text" placeholder="Nombre" name="name" value="<%= data.nom_us%>">
                </div>
                <div class="input-group">
                    <input class="input--style-2" type="text" placeholder="Usuario" name="user" value="<%= data.use_us%>">
                </div>
                <div class="input-group">
                    <input class="input--style-2" type="password" placeholder="Contraseña" name="pass" value="<%= data.con_us%>">
                </div>
                <div class="row row-space">
                    <div class="col-4">
                        <div class="input-group">
                            <input class="input--style-2 js-datepicker" type="text" placeholder="Fecha De Nacimiento" name="birthday" readonly="readonly" value="<%= data.eda_us%>">
                            <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="input-group">
                            <div class="rs-select2 js-select-simple select--no-search">
                                <select name="Gender">
                                    <option disabled="disabled" selected="<%=data.gen_us%>">Género</option>
                                    <option>Hombre</option>
                                    <option>Mujer</option>
                                    <option>Otro</option>
                                </select>
                                <div class="select-dropdown"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="input-group">
                    <div class="rs-select2 js-select-simple select--no-search">
                        <select name="turno">
                            <option disabled="disabled" selected="<%=data.tur_us%>">Turno</option>
                            <option>M</option>
                            <option>V</option>
                            <option>Otro</option>
                        </select>
                        <div class="select-dropdown"></div>
                    </div>
                </div>
                <div class="input-group">
                    <div class="rs-select2 js-select-simple select--no-search">
                        <select name="class">
                            <option disabled="disabled" selected="<%=data.car_us%>">Carrera</option>
                            <option>T.C.</option>
                            <option>S.D.</option>
                            <option>PROG.</option>
                            <option>M.S.A.</option>
                        </select>
                        <div class="select-dropdown"></div>
                    </div>
                </div>
                <div class="input-group">
                    <div class="rs-select2 js-select-simple select--no-search">
                        <select name="turno">
                            <option disabled="disabled" selected="<%=data.adm_us%>">El Usuario Es Administrador?</option>
                            <option>Si</option>
                            <option>No</option>
                        </select>
                        <div class="select-dropdown"></div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-4">
                        <div class="input-group">
                            <input class="input--style-2" type="text" placeholder="Boleta" name="boleta" value="<%= data.bol_us%>">
                        </div>
                    </div>
                </div>
                    <div class="row row-space">
                        <div class="col-4">
                            <div class="input-group">
                                <input class="input--style-2" type="text" placeholder="Grupo" name="grupo" value="<%= data.gru_us%>">
                            </div>
                        </div>
                </div>
                <br>
                <div class="value">
                    <div class="input-group js-input-file">
                        <input type="file" class="input-file" type="file" name="archivo" id="file">
                        <label class="label--file" for="file">Subir Foto De Perfil</label>
                        <span class="input-file__info">Sin Imagen</span>
                    </div>
                </div>
                <div class="p-t-30">
                    <button class="btn btn-block btn-lg btn-success" type="submit">Registrarse</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id_prueba %>" method="POST">
          <div class="form-group">
            <input type="text" name="nombre" value="<%= data.nombre%>" placeholder="Nombre" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="descripcion" value="<%= data.descripcion%>" placeholder="Address" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="resultado" value="<%= data.resultado%>" placeholder="Phone" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="exitosa" value="<%= data.exitosa%>" placeholder="Phone" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Modificar Prueba
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<% include partials/footer %> 
</body>
<% include partials/script %>
</html>